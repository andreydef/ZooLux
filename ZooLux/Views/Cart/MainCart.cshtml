@model IEnumerable<WebStore_Contrast.Models.ViewModels.Cart.CartVM>

@{
    ViewBag.Title = "Cart Details";
    Layout = null;

    int count = 1;
}

<title>Contrast | Cart</title>
@Html.Partial("~/Views/_Styles.cshtml")

@Html.Partial("_Header")

@if (ViewBag.Message != null)
{
    <section class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <!-- CATEGORY-MENU-LIST START -->
                    <div class="left-category-menu hidden-sm hidden-xs">
                        <div class="left-product-cat">
                            <div class="category-heading">
                                <h2>categories</h2>
                            </div>
                            <div class="category-menu-list">
                                <ul>
                                    <li>
                                        @Html.Action("CategoryMenuPartial", "Shop")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- END CATEGORY-MENU-LIST -->
                    <!-- START SMALL-PRODUCT-AREA -->
                    <div class="small-product-area carosel-navigation">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="area-title">
                                    <h3 class="title-group gfont-1">Bestseller</h3>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="active-bestseller sidebar owl-carousel owl-theme" style="opacity: 1; display: block;">
                                <div class="owl-wrapper-outer">
                                    <div class="owl-wrapper" style="width: 1172px; left: 0px; display: block; transition: all 0ms ease 0s; transform: translate3d(0px, 0px, 0px);">
                                        <div class="owl-item" style="width: 293px;">
                                            <div class="col-xs-12">
                                                <!-- Start Single-Product -->
                                                <div class="single-product">
                                                    @Html.Action("SmallProductMenuPartial", "Shop")
                                                </div>
                                                <!-- End Single-Product -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="owl-controls clickable"><div class="owl-buttons"><div class="owl-prev"><i class="fa fa-angle-left"></i></div><div class="owl-next"><i class="fa fa-angle-right"></i></div></div></div>
                            </div>
                        </div>
                    </div>
                    <!-- END SMALL-PRODUCT-AREA -->
                </div>
                <div class="col-md-9">
                    <!-- Start Shopping-Cart -->
                    <div class="shopping-cart">
                        <center><h3>@ViewBag.Message</h3></center>
                    </div>
                    <!-- End Shopping-Cart -->
                </div>
            </div>
        </div>
        <!-- START SUBSCRIBE-AREA -->
        <div class="subscribe-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-7 col-xs-12">
                        <label class="hidden-sm hidden-xs">Sign Up for Our Newsletter:</label>
                        <div class="subscribe">
                            <form action="#">
                                <input type="text" placeholder="Enter Your E-mail">
                                <button type="submit">Subscribe</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-5 col-xs-12">
                        <div class="social-media">
                            <a href="#"><i class="fa fa-facebook fb"></i></a>
                            <a href="#"><i class="fa fa-google-plus gp"></i></a>
                            <a href="#"><i class="fa fa-twitter tt"></i></a>
                            <a href="#"><i class="fa fa-youtube yt"></i></a>
                            <a href="#"><i class="fa fa-linkedin li"></i></a>
                            <a href="#"><i class="fa fa-rss rs"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END SUBSCRIBE-AREA -->
    </section>
}
else
{
    <section class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <!-- CATEGORY-MENU-LIST START -->
                    <div class="left-category-menu hidden-sm hidden-xs">
                        <div class="left-product-cat">
                            <div class="category-heading">
                                <h2>categories</h2>
                            </div>
                            <div class="category-menu-list">
                                <ul>
                                    <li>
                                        @Html.Action("CategoryMenuPartial", "Shop")
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- END CATEGORY-MENU-LIST -->
                    <!-- START SMALL-PRODUCT-AREA -->
                    <div class="small-product-area carosel-navigation">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="area-title">
                                    <h3 class="title-group gfont-1">Bestseller</h3>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="active-bestseller sidebar owl-carousel owl-theme" style="opacity: 1; display: block;">
                                <div class="owl-wrapper-outer">
                                    <div class="owl-wrapper" style="width: 1172px; left: 0px; display: block; transition: all 0ms ease 0s; transform: translate3d(0px, 0px, 0px);">
                                        <div class="owl-item" style="width: 293px;">
                                            <div class="col-xs-12">
                                                <!-- Start Single-Product -->
                                                <div class="single-product">
                                                    @Html.Action("SmallProductMenuPartial", "Shop")
                                                </div>
                                                <!-- End Single-Product -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="owl-controls clickable"><div class="owl-buttons"><div class="owl-prev"><i class="fa fa-angle-left"></i></div><div class="owl-next"><i class="fa fa-angle-right"></i></div></div></div>
                            </div>
                        </div>
                    </div>
                    <!-- END SMALL-PRODUCT-AREA -->
                </div>
                <div class="col-md-9">
                    <!-- Start Shopping-Cart -->
                    <div class="shopping-cart">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="cart-title">
                                    <h2 class="entry-title">Shopping Cart</h2>
                                </div>
                                <!-- Start Table -->

                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <td class="text-center">Image</td>
                                                <td class="text-left">Product Name</td>
                                                <td class="text-left">Quantity</td>
                                                <td class="text-right">Price</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="text-center">
                                                        @if (@item.Image == null)
                                                        {
                                                            <img src="/Content/img/no_image.png" style="width: 100px; height: 100px" />
                                                        }
                                                        else
                                                        {
                                                            <img src="/Images/Uploads/Products/@item.ProductId/Thumbs/@item.Image" />
                                                        }
                                                    </td>
                                                    <td class="text-left">
                                                        <a href="#">@Html.DisplayFor(modelItem => item.ProductName)</a>
                                                    </td>
                                                    <td class="text-left">
                                                        <div class="btn-block cart-put">
                                                            <input class="form-control qty" type="number" placeholder="@Html.DisplayFor(modelItem => item.Quantity)">
                                                            <div class="input-group-btn cart-buttons">
                                                                <button class="btn btn-primary incproduct" data-toggle="tooltip" data-id="@item.ProductId" title="">
                                                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                                                </button>
                                                                <button class="btn btn-primary decproduct" data-toggle="tooltip" data-id="@item.ProductId" title="">
                                                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                                                </button>
                                                                <button class="btn btn-danger removeproduct" data-toggle="tooltip" data-id="@item.ProductId" title="">
                                                                    <i class="fa fa-times-circle"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="price text-right">$@Html.DisplayFor(modelItem => item.Price)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="paypaldiv">
                                        <form class="paypalform" action="https://www.sandbox.paypal.com/us/cgi-bin/webscr" method="post">
                                            <input type="hidden" name="cmd" value="_cart">
                                            <input type="hidden" name="upload" value="1" />
                                            <input type="hidden" name="business" value="sb-iwsos947854@business.example.com">

                                            @foreach (var item in Model)
                                            {
                                                <input type="hidden" name="item_name_@count" value="@item.ProductName">
                                                <input type="hidden" name="amount_@count" value="@item.Price">
                                                <input type="hidden" name="quantity_@count" value="@item.Quantity">
                                                count++;
                                            }

                                            <input type="hidden" name="currency_code" value="USD">
                                            <div style="display: none">
                                                <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- End Table -->
                                <div class="row">
                                    <div class="col-sm-4 col-sm-offset-8">
                                        <table class="table table-bordered">
                                            <tbody>
                                                <tr>
                                                    <td class="grandtotal text-right"> <b>Grand total:</b> <span>@ViewBag.GrandTotal $</span> </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <span class="message"></span>
                                    </div>
                                </div>
                                <div class="shopping-checkout">
                                    <a href="/shop/Products" class="btn btn-default pull-left">Continue Shopping</a>
                                    <a href="#" class="placeorder btn btn-primary pull-right">Checkout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Shopping-Cart -->
                </div>
            </div>
        </div>
        <!-- START SUBSCRIBE-AREA -->
        <div class="subscribe-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-7 col-xs-12">
                        <label class="hidden-sm hidden-xs">Sign Up for Our Newsletter:</label>
                        <div class="subscribe">
                            <form action="#">
                                <input type="text" placeholder="Enter Your E-mail">
                                <button type="submit">Subscribe</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-5 col-xs-12">
                        <div class="social-media">
                            <a href="#"><i class="fa fa-facebook fb"></i></a>
                            <a href="#"><i class="fa fa-google-plus gp"></i></a>
                            <a href="#"><i class="fa fa-twitter tt"></i></a>
                            <a href="#"><i class="fa fa-youtube yt"></i></a>
                            <a href="#"><i class="fa fa-linkedin li"></i></a>
                            <a href="#"><i class="fa fa-rss rs"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END SUBSCRIBE-AREA -->
    </section>
}

@Html.Partial("_Footer")

@Html.Partial("~/Views/_Scripts.cshtml")

<script src="~/Content/ShopJS/IncrementProductScript.js"></script>